# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real credentials to version control

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_to_secure_password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# JWT Configuration (minimum 32 characters)
JWT_SECRET=change_me_to_secure_jwt_secret_min_32_chars

# Service Ports
CONFIG_SERVER_PORT=8888
EUREKA_SERVER_PORT=8761
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
REQUEST_SERVICE_PORT=8083
PROVIDER_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085

# Kafka Configuration
KAFKA_BROKER_HOST=kafka
KAFKA_BROKER_PORT=9092
KAFKA_EXTERNAL_PORT=29092
ZOOKEEPER_PORT=2181

# Frontend Configuration
VITE_API_URL=http://localhost:8080
NODE_ENV=development

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Database Credentials for Services
DB_PASSWORD=change_me_to_secure_password
DB_USERNAME=postgres

# Environment (development, staging, production)
ENVIRONMENT=development
